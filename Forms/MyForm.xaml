<Window x:Class="RAA_Sheet_Maker.MyForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAA_Sheet_Maker"
             mc:Ignorable="d" 
             Title="Sheet Maker"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Sheet Maker" FontSize="48" VerticalAlignment="Center" FontFamily="Arial Rounded MT Bold"/>
        <Label Grid.Row="1" Content="Enter Sheet information below:" FontSize="16" VerticalAlignment="Center"/>
        <DataGrid Grid.Row="2" Name="dataGrid" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" Margin="0,10,0,10" AlternatingRowBackground="AliceBlue">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sheet Number" Binding="{Binding Number}" Width="120"/>
                <DataGridTextColumn Header="Sheet Name" Binding="{Binding Name}" Width="*"/>
                <DataGridCheckBoxColumn Header="Is Placeholder?" Binding="{Binding Placeholder}" Width="120"/>
                <DataGridComboBoxColumn Header="Titleblock" SelectedValueBinding="{Binding Titleblock}" Width="220"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="btnAddRow" Content="+" Width="30" Height="30" FontSize="16" Click="btnAddRow_Click"/>
                <Button x:Name="btnRemoveRow" Content="-" Width="30" Height="30" Margin="10,0,0,0" FontSize="16" Click="btnRemoveRow_Click"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnOK" Content="OK" Width="80" Height="30" Margin="0,0,10,0" Click="btnOK_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" Width="80" Height="30" Margin="0,0,0,0" Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
